<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="client.ui.FormController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <GridPane fx:id="loggedInPane" alignment="center" hgap="10" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="0"
              visible="false">
        <GridPane GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Start date: " GridPane.rowIndex="0"/>
            <DatePicker fx:id="startCalendar" GridPane.rowIndex="1"/>
            <Label text="End date: " GridPane.rowIndex="2"/>
            <DatePicker fx:id="endCalendar" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <Label text="Sites: " GridPane.rowIndex="4"/>
            <ListView fx:id="siteView" GridPane.rowIndex="5" prefWidth="350"/>
        </GridPane>
        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Available parking spaces: " GridPane.rowIndex="0"/>
            <ListView fx:id="parkingSpaceView" GridPane.rowIndex="1" prefWidth="150"/>

        </GridPane>
        <Button onAction="#reserve" fx:id="reserveButton" text="Reserve" GridPane.columnIndex="1"
                GridPane.rowIndex="1"/>
        <GridPane GridPane.columnIndex="2" GridPane.rowIndex="0">
            <Label text="Reservations: " GridPane.rowIndex="0"/>
            <ListView fx:id="reservationView" GridPane.rowIndex="1" prefWidth="350"/>

        </GridPane>
        <Button onAction="#cancelReservation" fx:id="cancelReservationButton" text="Cancel reservation"
                GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Button onAction="#requestAvailableParkingSpaces" fx:id="searchButton" text="Search" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Button onAction="#logOut" fx:id="logOutButton" text="Log out" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    </GridPane>

    <GridPane fx:id="loggedOutPane" alignment="center" hgap="10" vgap="10" GridPane.columnIndex="0"
              GridPane.rowIndex="0">
        <Label text="Username" GridPane.rowIndex="0"/>
        <TextField fx:id="usernameField" text="admin" GridPane.rowIndex="1"/>

        <Label text="Name: " GridPane.rowIndex="2"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="3" text="admin"/>
        <Button onAction="#logIn" fx:id="logIn" text="Log in" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    </GridPane>


</GridPane>
